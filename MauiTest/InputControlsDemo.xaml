<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTest.InputControlsDemo"
             Title="InputControlsDemo">
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="CenterAndExpand">

        <HorizontalStackLayout>
            <Label VerticalOptions="Center" FontAttributes="Bold" FontSize="16" Text="Es estudiante?"></Label>
            <CheckBox IsChecked="True" />
        </HorizontalStackLayout>

        <Slider
                x:Name="slider"
                Minimum="0"
                Maximum="100"
                MinimumTrackColor="Yellow"
                MaximumTrackColor="Green"
                ThumbColor="DarkRed"
                ValueChanged="slider_ValueChanged" />

        <Label x:Name="lblSlider" FontAttributes="Bold" FontSize="16" />

        <Stepper x:Name="stepper" Minimum="0" Maximum="10" Increment="2" ValueChanged="stepper_ValueChanged" ></Stepper>

        <HorizontalStackLayout>
            <Label VerticalOptions="Center" FontAttributes="Bold" FontSize="16" Text="Es estudiante?"></Label>
            <Switch IsToggled="True" />
        </HorizontalStackLayout>

        <DatePicker>
        </DatePicker>

        <TimePicker />
    </VerticalStackLayout>
</ContentPage>